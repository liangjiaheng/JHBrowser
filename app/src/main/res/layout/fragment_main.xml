<?xml version="1.0" encoding="utf-8"?>
<com.design.jhbrowser.utils.widget.ColorScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_bg"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_frag_main" />

        <include layout="@layout/include_frag_navigation" />

        <include layout="@layout/include_frag_recycle" />


    </LinearLayout>
</com.design.jhbrowser.utils.widget.ColorScrollView>
