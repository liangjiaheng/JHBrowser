<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/down_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fafafa"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/include_dialog_menu" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dialog_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/pop_layout"
        android:background="@color/transparency">

        <View
            android:id="@+id/layout_login"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="#fafafa" />

        <ImageView
            android:id="@+id/img_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/img_login_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/layout_login"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_login"
            android:text="@string/dialog_login_menu"
            android:textColor="#fafafa" />


    </RelativeLayout>


</RelativeLayout>